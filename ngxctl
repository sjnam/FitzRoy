#!/bin/bash

ARGV="$@"

OPENRESTY="/usr/local/openresty/bin/openresty"

ERROR=0

case $ARGV in
    start)
        $OPENRESTY -p $PWD/
        ERROR=$?
        ;;
    stop|reload)
        $OPENRESTY -p $PWD/ -s $ARGV
        ERROR=$?
        ;;
    *)
        echo 'usage: ./ngxctl start|stop|reload'
esac

if [ $ARGV == stop ]
then
	rm -rf $APP_HOME/html/images/*
fi

exit $ERROR

